    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivPosLogo"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:background="#C0C0C0"
                android:src="@drawable/default_image" />


            <TextView
                android:id="@+id/tvVName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="136dp"
                    android:layout_height="111dp"
                    android:padding="5dp"
                    android:text="入座人數:"
                    android:textColor="#03A9F4"
                    android:textSize="28dp"
                    tools:text="入座人數: " />

                <TextView
                    android:id="@+id/tvWnum"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:textSize="28dp" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/waitNum"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:max="9"
                android:min="1"
                android:progress="5" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="提示模式"
                android:textColor="#03A9F4"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnPush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnPush"
                    android:padding="2dp"
                    android:text="推播訊息" />

                <Button
                    android:id="@+id/btnNoPush"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnPushNot"
                    android:padding="2dp"
                    android:text="無" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvNoticeMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="0dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="推播訊息提示(幾組)"
                android:textColor="#03A9F4"
                android:textSize="28dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnNotice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnNotice1"
                    android:text="1"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnNotice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnNotice2"
                    android:text="2"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnNotice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="OnNotice3"
                    android:text="3"
                    android:visibility="gone" />
            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getWaitPos"
                android:text="候位取號"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
